{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],

    "lib": ["esnext", "dom"],
    "composite": true,
    "declaration": true,

    "exactOptionalPropertyTypes": true,

    "paths": {
      "#/*": ["./src/*"]
    },

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "files": [],
  "references": [
    { "path": "./src" },
    { "path": "./public" },
    { "path": "./types/" }
  ]
}
